<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="317dp"
        android:layout_height="29dp"
        android:layout_marginTop="4dp"
        android:text="Set Date and Time"
        android:textColor="#0A3D62"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dateinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:drawableRight="@drawable/ic_baseline_calendar_month_24"
        android:hint="Select Date"
        app:layout_constraintEnd_toEndOf="@+id/timeinput"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/timeinput"
        app:layout_constraintTop_toBottomOf="@+id/timeinput" />

    <EditText
        android:id="@+id/timeinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:drawableRight="@drawable/time"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="Select Time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!--        </LinearLayout>-->

</androidx.constraintlayout.widget.ConstraintLayout>